<Window x:Name="RootFrame" x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:Client.ControlUser"
        xmlns:w="clr-namespace:Client.Windows"
        Title="Meta Media Manager" Height="800" Width="1800" WindowStartupLocation="CenterScreen" Background="{DynamicResource ResourceKey=Font}"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <c:Top_border_bar x:Name="TopBar" Grid.Row="0" Focusable="True"/>
    </Grid>
</Window>
