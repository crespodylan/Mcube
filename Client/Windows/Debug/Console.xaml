<Window x:Class="Client.Windows.Debug.Console"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console" Height="400" Width="710" ResizeMode="NoResize">
    <Grid>
 
        <RichTextBox x:Name="Out" HorizontalAlignment="Left" Height="323" Margin="10,10,0,0" VerticalAlignment="Top" Width="674" AcceptsTab="True" IsReadOnly="True">
            <FlowDocument>
                <FlowDocument.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </FlowDocument.Resources>
            </FlowDocument>
        </RichTextBox>
        
        <TextBox x:Name="In" HorizontalAlignment="Left" Height="23" Margin="10,5,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="674"/>
        
    </Grid>
</Window>
